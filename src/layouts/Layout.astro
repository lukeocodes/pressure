---
import { getCampaign } from '../lib/utils';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const campaign = getCampaign();
const pageTitle = `${title} | ${campaign.title}`;
const pageDescription = description || campaign.description;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style is:global>
      :root {
        --primary-color: #1d70b8;
        --text-color: #0b0c0c;
        --border-color: #b1b4b6;
        --background-color: #ffffff;
        --error-color: #d4351c;
        --success-color: #00703c;
      }
      
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--background-color);
      }
      
      .container {
        max-width: 1020px;
        margin: 0 auto;
        padding: 0 20px;
      }
      
      header {
        border-bottom: 10px solid var(--primary-color);
        padding: 20px 0;
        margin-bottom: 40px;
      }
      
      header h1 {
        font-size: 2rem;
        font-weight: 700;
      }
      
      main {
        min-height: 60vh;
        margin-bottom: 40px;
      }
      
      footer {
        border-top: 1px solid var(--border-color);
        padding: 20px 0;
        margin-top: 40px;
        font-size: 0.9rem;
        color: #505a5f;
      }
      
      .footer-links {
        display: flex;
        gap: 20px;
        margin-bottom: 10px;
      }
      
      .footer-links a {
        color: var(--primary-color);
        text-decoration: none;
      }
      
      .footer-links a:hover {
        text-decoration: underline;
      }
      
      button, .button {
        background-color: var(--primary-color);
        color: white;
        border: 2px solid transparent;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.2s;
      }
      
      button:hover, .button:hover {
        background-color: #003078;
      }
      
      button:disabled {
        background-color: #b1b4b6;
        cursor: not-allowed;
      }
      
      input, textarea {
        width: 100%;
        padding: 10px;
        border: 2px solid var(--text-color);
        border-radius: 4px;
        font-size: 1rem;
        font-family: inherit;
      }
      
      input:focus, textarea:focus {
        outline: 3px solid #ffdd00;
        border-color: var(--text-color);
      }
      
      label {
        display: block;
        font-weight: 600;
        margin-bottom: 5px;
      }
      
      .form-group {
        margin-bottom: 20px;
      }
      
      .error {
        color: var(--error-color);
        font-weight: 600;
        padding: 15px;
        border: 4px solid var(--error-color);
        background-color: #fee;
        margin-bottom: 20px;
      }
      
      .success {
        color: var(--success-color);
        font-weight: 600;
        padding: 15px;
        border: 4px solid var(--success-color);
        background-color: #efe;
        margin-bottom: 20px;
      }
      
      .loading {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s ease-in-out infinite;
        margin-right: 8px;
      }
      
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>{campaign.title}</h1>
      </div>
    </header>
    
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    
    <footer>
      <div class="container">
        <div class="footer-links">
          <a href={campaign.footer.organizationUrl} target="_blank" rel="noopener">{campaign.footer.organizationName}</a>
          <a href="https://github.com/lukeocodes/pressure" target="_blank" rel="noopener">Powered by Pressure (Open Source)</a>
        </div>
        <p>&copy; {new Date().getFullYear()} {campaign.footer.organizationName}. Licensed under ISC.</p>
      </div>
    </footer>
  </body>
</html>

