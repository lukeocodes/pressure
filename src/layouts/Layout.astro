---
import { getCampaign } from "../lib/utils";

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const campaign = getCampaign();
const pageTitle = `${title} | ${campaign.title}`;
const pageDescription = description || campaign.description;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style is:global>
      :root {
        --primary-color: #1d70b8;
        --text-color: #0b0c0c;
        --border-color: #b1b4b6;
        --background-color: #ffffff;
        --error-color: #d4351c;
        --success-color: #00703c;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--background-color);
      }

      .container {
        max-width: 1020px;
        margin: 0 auto;
        padding: 0 20px;
      }

      header {
        border-bottom: 10px solid var(--primary-color);
        margin-bottom: 40px;
        position: relative;
      }

      .header-content {
        padding: 20px 0;
      }

      .header-with-banner {
        position: relative;
        min-height: 400px;
        display: flex;
        align-items: center;
        padding: 0;
      }

      .header-banner {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
      }

      .header-banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          to bottom,
          rgba(0, 0, 0, 0.3) 0%,
          rgba(0, 0, 0, 0.5) 100%
        );
        z-index: 1;
      }

      .header-title-wrapper {
        position: relative;
        z-index: 2;
        padding: 40px 0;
      }

      header h1 {
        font-size: 2rem;
        font-weight: 700;
      }

      .header-with-banner h1 {
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
      }

      main {
        min-height: 60vh;
        margin-bottom: 40px;
      }

      footer {
        border-top: 1px solid var(--border-color);
        padding: 20px 0;
        margin-top: 40px;
        font-size: 0.9rem;
        color: #505a5f;
      }

      .footer-links {
        display: flex;
        gap: 20px;
        margin-bottom: 10px;
      }

      .footer-links a {
        color: var(--primary-color);
        text-decoration: none;
      }

      .footer-links a:hover {
        text-decoration: underline;
      }

      .attribution {
        font-size: 0.85rem;
        margin-bottom: 10px;
        font-style: italic;
      }

      .attribution a {
        color: var(--primary-color);
        text-decoration: none;
      }

      .attribution a:hover {
        text-decoration: underline;
      }

      .pressure-icon {
        display: inline-block;
        width: 1em;
        height: 1em;
        vertical-align: -0.125em;
        margin: 0 0.1em;
      }

      button,
      .button {
        background-color: var(--primary-color);
        color: white;
        border: 2px solid transparent;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.2s;
      }

      button:hover,
      .button:hover {
        background-color: #003078;
      }

      button:disabled {
        background-color: #b1b4b6;
        cursor: not-allowed;
      }

      input,
      textarea {
        width: 100%;
        padding: 10px;
        border: 2px solid var(--text-color);
        border-radius: 4px;
        font-size: 1rem;
        font-family: inherit;
      }

      input:focus,
      textarea:focus {
        outline: 3px solid #ffdd00;
        border-color: var(--text-color);
      }

      label {
        display: block;
        font-weight: 600;
        margin-bottom: 5px;
      }

      .form-group {
        margin-bottom: 20px;
      }

      .error {
        color: var(--error-color);
        font-weight: 600;
        padding: 15px;
        border: 4px solid var(--error-color);
        background-color: #fee;
        margin-bottom: 20px;
      }

      .success {
        color: var(--success-color);
        font-weight: 600;
        padding: 15px;
        border: 4px solid var(--success-color);
        background-color: #efe;
        margin-bottom: 20px;
      }

      .loading {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s ease-in-out infinite;
        margin-right: 8px;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <header>
      {
        campaign.styling.bannerUrl ? (
          <div class="header-with-banner">
            <img
              src={campaign.styling.bannerUrl}
              alt=""
              class="header-banner"
              aria-hidden="true"
            />
            <div class="header-banner-overlay" aria-hidden="true" />
            <div class="container header-title-wrapper">
              <h1>{campaign.title}</h1>
            </div>
          </div>
        ) : (
          <div class="header-content">
            <div class="container">
              <h1>{campaign.title}</h1>
            </div>
          </div>
        )
      }
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="footer-links">
          <a
            href={campaign.footer.organizationUrl}
            target="_blank"
            rel="noopener">{campaign.footer.organizationName}</a
          >
          <a
            href="https://github.com/lukeocodes/pressure"
            target="_blank"
            rel="noopener"
            >Powered by <img
              src="/favicon.svg"
              alt=""
              class="pressure-icon"
              aria-hidden="true"
            /> Pressure (Open Source)</a
          >
        </div>
        <p class="attribution">
          Contains Parliamentary information licensed under the <a
            href="https://www.parliament.uk/site-information/copyright-parliament/open-parliament-licence/"
            target="_blank"
            rel="noopener">Open Parliament Licence v3.0</a
          >.
        </p>
        <p>
          &copy; {new Date().getFullYear()}
          {campaign.footer.organizationName}. Licensed under ISC.
        </p>
      </div>
    </footer>
  </body>
</html>
